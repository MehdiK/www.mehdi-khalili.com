<html>
    <%- @partial('head.html.eco', @) %>

    <body class="left-sidebar">

        <div id="header-wrapper">
            <div id="header" class="container big">
                <h1><%= @site.author %></h1>
                <p>ThoughtWorker, ex-Readifarian, programmer, mentor, blogger, speaker <br />
                Creator of BDDfy and Humanizer and contributor on Seleno</p>
                <%- @partial('nav.html.eco', @) %>
            </div>
        </div>

        <div id="main-wrapper">
            <div id="main" class="container big">
                <div class="row">
                    <%- @partial('sidebar.html.eco', @) %>

                    <div id="content" class="9u skel-cell-mainContent">
                        <article class="is-post">
                            <h3 id="logo"><%- @document.title %></h3>
                            <div class="post-date"><%- @formatDate(@document.date) %></div>
                            <%- @partial('share.html', @) %>
                            <%- @partial('tags.html.eco', @, { tags: @document.tags }) %>

                            <%- @content %>
                        </article>
                        <article class="is-post">
                            <%- @partial('disqus.html', @) %>
                        </article>
                    </div>
                </div>
            </div>
        </div>

        <%- @partial('footer.html.eco', @) %>

    </body>
</html>